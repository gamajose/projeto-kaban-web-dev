{
  "name": "clickup-clone",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:sandbox": "wrangler pages dev dist --ip 0.0.0.0 --port 3000",
    "dev:d1": "wrangler pages dev dist --d1=clickup-db-production --local --ip 0.0.0.0 --port 3000",
    "build": "vite build",
    "preview": "wrangler pages dev dist",
    "deploy": "npm run build && wrangler pages deploy dist",
    "deploy:prod": "npm run build && wrangler pages deploy dist --project-name clickup-clone",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "clean-port": "fuser -k 3000/tcp 2>/dev/null || true",
    "test": "curl http://localhost:3000",
    "db:create": "wrangler d1 create clickup-db-production",
    "db:migrate:local": "wrangler d1 migrations apply clickup-db-production --local",
    "db:migrate:prod": "wrangler d1 migrations apply clickup-db-production",
    "db:seed": "wrangler d1 execute clickup-db-production --local --file=./seed.sql",
    "db:reset": "rm -rf .wrangler/state/v3/d1 && npm run db:migrate:local && npm run db:seed",
    "db:console:local": "wrangler d1 execute clickup-db-production --local",
    "db:console:prod": "wrangler d1 execute clickup-db-production",
    "git:commit": "git add . && git commit -m",
    "git:status": "git status"
  },
  "dependencies": {
    "hono": "^4.9.8",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@hono/vite-build": "^1.2.0",
    "@hono/vite-dev-server": "^0.18.2",
    "@types/pg": "^8.15.5",
    "vite": "^6.3.5",
    "wrangler": "^4.4.0"
  }
}
